@model IEnumerable<StateHospital.Presentation.Models.DoctorModel>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Doctors</h2>
        
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var doctor in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@doctor.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @doctor.DoctorId</h6>

                        <p class="card-text">
                            <strong>Registration ID:</strong> @doctor.DoctorRegistrationId<br />
                            <strong>Qualification:</strong> @doctor.Qualification<br />
                            <strong>Specialization:</strong> @doctor.Specialization<br />
                            <strong>Phone:</strong> @doctor.PhoneNumber<br />
                            <strong>City:</strong> @doctor.City<br />
                            <small class="text-muted">Created: @doctor.CreatedDate.ToShortDateString()</small>
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex gap-2">
                            <a asp-action="Update" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a asp-action="Details" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
