@model IEnumerable<StateHospital.Presentation.Models.DoctorModel>

@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Available Doctors</h2>
        <a asp-action="ViewAppointments" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> View All Appointments
        </a>
    </div>

    <div class="row">
        @foreach (var doctor in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@doctor.Name</h5>
                        <p class="card-text mb-1">
                            <strong>Qualification:</strong> @doctor.Qualification
                        </p>
                        <p class="card-text mb-1">
                            <strong>Speciality:</strong> @doctor.Specialization
                        </p>
                        <p class="card-text mb-3">
                            <strong>City:</strong> @doctor.City
                        </p>
                        <a asp-action="BookAppointment" asp-route-doctorId="@doctor.DoctorId" class="btn btn-primary">Book Appointment</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
