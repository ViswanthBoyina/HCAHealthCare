@model IEnumerable<StateHospital.Models.PatientModel>

@{
    ViewData["Title"] = "Patients Information";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Patients</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Patient
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.First().DateOfBirth)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Diagnosis)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CreatedBy)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().LastModifiedBy)</th>
                            <th>@Html.DisplayNameFor(model => model.First().LastModifiedDate)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Gender</td>
                                <td>@item.DateOfBirth.ToShortDateString()</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>@item.Diagnosis</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>@item.LastModifiedBy</td>
                                <td>@item.LastModifiedDate?.ToShortDateString()</td>
                                <td class="text-center">
                                    <div class="dropdown">
                                        <button class="btn btn-link p-0 m-0 text-decoration-none" type="button" id="actionMenu-@item.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                            <span class="text-dark fs-5">●</span>
                                            <span class="text-warning fs-5">●</span>
                                            <span class="text-danger fs-5">●</span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="actionMenu-@item.Id">
                                            <li>
                                                <a class="dropdown-item text-warning" asp-action="Update" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil-square me-1"></i> Update
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item text-info" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="bi bi-info-circle me-1"></i> Details
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash me-1"></i> Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
